{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "paths": {
      "verdaccio": [
        "./typings.d.ts"
      ]
    }
  },
  "include": [
    "./**/*"
  ]
}
