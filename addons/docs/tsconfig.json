{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "skipLibCheck": true,
    "types": [
      "webpack-env",
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/__tests__/**/*",
    "src/**/*.stories.*",
    "src/**/*.mockdata.*",
    "src/**/__testfixtures__/**"
  ]
}